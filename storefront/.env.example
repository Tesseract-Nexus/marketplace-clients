# Azure AD Authentication
NEXT_PUBLIC_AZURE_CLIENT_ID=your_azure_client_id
NEXT_PUBLIC_AZURE_AUTHORITY=https://login.microsoftonline.com/your_tenant_id
NEXT_PUBLIC_REDIRECT_URI=http://localhost:3200

# API Endpoints (Client-side - NEXT_PUBLIC_*)
NEXT_PUBLIC_PRODUCTS_API_URL=http://localhost:3107/api/v1
NEXT_PUBLIC_ORDERS_API_URL=http://localhost:3004/api/v1
NEXT_PUBLIC_CATEGORIES_API_URL=http://localhost:3031/api/v1
NEXT_PUBLIC_COUPONS_API_URL=http://localhost:3005/api/v1
NEXT_PUBLIC_REVIEWS_API_URL=http://localhost:3006/api/v1
NEXT_PUBLIC_SETTINGS_API_URL=http://localhost:8085/api/v1
NEXT_PUBLIC_TENANT_API_URL=http://localhost:8092/api/v1
NEXT_PUBLIC_TAX_SERVICE_URL=http://localhost:8091
NEXT_PUBLIC_PAYMENT_SERVICE_URL=http://localhost:8092
NEXT_PUBLIC_ORDERS_SERVICE_URL=http://localhost:8080
NEXT_PUBLIC_SHIPPING_SERVICE_URL=http://localhost:8088
NEXT_PUBLIC_STOREFRONT_URL=http://localhost:3200

# Server-side Service URLs (for SSR - used by resolver.ts)
SETTINGS_SERVICE_URL=http://localhost:8085
TENANT_SERVICE_URL=http://localhost:8092

# Application Settings
NEXT_PUBLIC_APP_VERSION=0.1.0
PORT=3200

# Feature Flags
NEXT_PUBLIC_ENABLE_REVIEWS=true
NEXT_PUBLIC_ENABLE_WISHLIST=true
NEXT_PUBLIC_ENABLE_MULTI_CURRENCY=false
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# Development Settings
# Note: NODE_ENV is set by Docker/runtime environment - don't set it here
NEXT_TELEMETRY_DISABLED=1

# ==================================
# Push Notifications (Web Push / VAPID)
# ==================================
NEXT_PUBLIC_PUSH_ENABLED=false
NEXT_PUBLIC_VAPID_PUBLIC_KEY=
NOTIFICATION_SERVICE_URL=http://notification-service.marketplace.svc.cluster.local:8080

# OpenPanel Analytics
# Client ID from OpenPanel dashboard (per-app)
NEXT_PUBLIC_OPENPANEL_CLIENT_ID=
# OpenPanel server URL (server-side only, used for rewrites proxy)
OPENPANEL_URL=dev-analytics.tesserix.app
